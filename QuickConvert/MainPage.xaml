<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:QuickConvert.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:font="clr-namespace:QuickConvert.FontAwesome"
             x:Class="QuickConvert.MainPage"
             Title="{Binding Title}">

    <VerticalStackLayout>

        <Border Margin="10">
            <Entry Text="{Binding Input}"
                   Keyboard="Numeric" />
        </Border>

        <font:FontAwesomeLabel Text="{x:Static font:FontAwesomeIcon.ArrowsRotate}"
                               FontSize="40"
                               HorizontalOptions="End"
                               Margin="20,5,20,5"
                               Background="Transparent"
                               TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"
                               />

        <Border Margin="10">
            <Entry Text="{Binding Output}"
                   IsReadOnly="True" />
        </Border>


        <Button Text="Refresh"
                Command="{Binding ForceRefreshRateCommand}"
                WidthRequest="150" />
    </VerticalStackLayout>

</ContentPage>
