<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:QuickConvert.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="QuickConvert.MainPage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="30"
                             Spacing="25">

            <FlexLayout JustifyContent="SpaceBetween">
                <Label Text="Date: " />
                <Label Text="{Binding Date}" />
            </FlexLayout>

            <FlexLayout JustifyContent="SpaceBetween">
                <Label Text="Next Refresh: " />
                <Label Text="{Binding ExpirationDate}"/>
            </FlexLayout>

            <Entry Keyboard="Numeric"
                   TextChanged="Entry_TextChanged"/>

            <Label Text="{Binding Output}"/>

            <Button Text="Force Refresh"
                    Clicked="ForceRefresh" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
