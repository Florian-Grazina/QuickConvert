<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:QuickConvert.ViewModels"
             xmlns:font="clr-namespace:QuickConvert.FontAwesome"
             x:DataType="vm:MainViewModel"
             x:Class="QuickConvert.MainPage"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <Style x:Key="PadButton"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#555" />
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="TextColor"
                    Value="White" />
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="CornerRadius"
                    Value="10" />
        </Style>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Padding="10">

            <Border Padding="10,2,2,2"
                    HeightRequest="50">
                <FlexLayout JustifyContent="SpaceBetween">
                    <Grid FlexLayout.Grow="1">
                        <Entry Text="{Binding BaseCurrencyOutput}" />
                        <Entry Text="{Binding BaseCurrencyInput}"
                               Keyboard="Numeric" />
                    </Grid>

                    <Border StrokeThickness="0"
                            WidthRequest="70">
                        <Grid>

                            <Image Source="{Binding BaseCurrencyFlagImg}"
                                   Aspect="AspectFill" />
                            <Rectangle Margin="-1"
                                       Fill="Black"
                                       RadiusY="0"
                                       Opacity="0.3" />
                            <Label Text="{Binding BaseCurrencyCode}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontSize="20"
                                   FontAttributes="Bold" />
                            <Button BackgroundColor="Transparent" />
                        </Grid>
                    </Border>

                </FlexLayout>
            </Border>

            <Border Margin="50,30,50,30" />

            <Border Padding="10,2,2,2"
                    HeightRequest="50">
                <FlexLayout JustifyContent="SpaceBetween">
                    <Grid FlexLayout.Grow="1">
                        <Entry Text="{Binding TargetCurrencyOutput}" />
                        <Entry Text="{Binding TargetCurrencyInput}"
                               Background="Transparent"
                               Keyboard="Numeric" />
                    </Grid>

                    <Border StrokeThickness="0"
                            WidthRequest="70">
                        <Grid>

                            <Image Source="{Binding TargetCurrencyFlagImg}"
                                   Aspect="AspectFill" />
                            <Rectangle Margin="-1"
                                       Fill="Black"
                                       RadiusY="0"
                                       Opacity="0.3" />

                            <Label Text="{Binding TargetCurrencyCode}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontSize="20"
                                   FontAttributes="Bold" />
                            <Button BackgroundColor="Transparent" />
                        </Grid>
                    </Border>
                </FlexLayout>
            </Border>

            <StackLayout Margin="10"
                         HorizontalOptions="Center">
                <Label HorizontalOptions="Center"
                       FontSize="16"
                       Text="{Binding Date}" />
                <Label HorizontalOptions="Center"
                       FontSize="16"
                       Text="{Binding RateInformation}" />

            </StackLayout>

            <Button Text="Refresh"
                    Command="{Binding ForceRefreshRateCommand}"
                    WidthRequest="150" />

        </VerticalStackLayout>
        <Grid Grid.Row="1" VerticalOptions="End">
            <Grid.RowDefinitions>
                <RowDefinition Height="65" />
                <RowDefinition Height="65" />
                <RowDefinition Height="65" />
                <RowDefinition Height="65" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.1*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Grid.Row="0"
                    Text="1"
                    Style="{StaticResource PadButton}" />
            <Button Grid.Column="1"
                    Grid.Row="1"
                    Text="4"
                    Style="{StaticResource PadButton}" />
            <Button Grid.Column="1"
                    Grid.Row="2"
                    Text="7"
                    Style="{StaticResource PadButton}" />
            <Button Grid.Column="2"
                    Grid.Row="0"
                    Text="2"
                    Style="{StaticResource PadButton}" />
            <Button Grid.Column="2"
                    Grid.Row="1"
                    Text="5"
                    Style="{StaticResource PadButton}" />
            <Button Grid.Column="2"
                    Grid.Row="2"
                    Text="8"
                    Style="{StaticResource PadButton}" />
            <Button Grid.Column="3"
                    Grid.Row="0"
                    Text="3"
                    Style="{StaticResource PadButton}" />
            <Button Grid.Column="3"
                    Grid.Row="1"
                    Text="6"
                    Style="{StaticResource PadButton}" />
            <Button Grid.Column="3"
                    Grid.Row="2"
                    Text="9"
                    Style="{StaticResource PadButton}" />
            <Button Grid.Column="1"
                    Grid.Row="3"
                    Text="."
                    Style="{StaticResource PadButton}" />
            <Button Grid.Column="2"
                    Grid.Row="3"
                    Text="0"
                    Style="{StaticResource PadButton}" />
            <Button Grid.Column="3"
                    Grid.Row="3"
                    Command="{Binding ClearCommand}"
                    Text="C"
                    Background="#999"
                    Style="{StaticResource PadButton}" />

        </Grid>
    </Grid>

</ContentPage>
